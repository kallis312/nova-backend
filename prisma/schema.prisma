generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ERole {
  ADMIN
  USER
}

enum EDicomStatus {
  unannotated
  annotated
}

enum EDicomReview {
  accept
  pending
  reject
}

model User {
  id          Int           @id @default(autoincrement())
  username    String        @unique
  password    String
  role        ERole?        @default(USER)
  Annotation  Annotation[]
  Dicom       Dicom[]
  LabelPreset LabelPreset[]
}

model Dicom {
  id            String        @id @unique
  patientId     String
  studyDate     DateTime
  modality      String
  status        EDicomStatus? @default(unannotated)
  review        EDicomReview?
  reviewBy      String?
  annotatedUser User?         @relation(fields: [reviewBy], references: [username], onDelete: Cascade)
  annotation    Annotation[]
}

model Annotation {
  id            Int      @id @default(autoincrement())
  annotatedBy   String
  annotatedUser User     @relation(fields: [annotatedBy], references: [username], onDelete: Cascade)
  annotatedAt   DateTime @updatedAt
  slices        Json     @default("[]")
  Dicom         Dicom    @relation(fields: [dicomId], references: [id], onDelete: Cascade)
  dicomId       String
}

model LabelPreset {
  id          Int    @id @default(autoincrement())
  name        String @unique
  lables      Json   @default("[]")
  creator     String
  creatorUser User   @relation(fields: [creator], references: [username], onDelete: Cascade)
}
