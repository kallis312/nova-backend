generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  username   String       @unique
  password   String
  role       Role?        @default(USER)
  Annotation Annotation[]
}

enum Role {
  ADMIN
  USER
}

model Dicom {
  id         String       @id @unique
  patientId  String
  studyDate  DateTime
  modality   String
  status     DicomStatus? @default(unannotated)
  annotation Annotation[]
}

enum DicomStatus {
  annotated
  unannotated
}

model Annotation {
  id            Int      @id @default(autoincrement())
  annotatedBy   String
  annotatedUser User     @relation(fields: [annotatedBy], references: [username], onDelete: Cascade)
  annotatedAt   DateTime @updatedAt
  slices        Json     @default("[]")
  Dicom         Dicom    @relation(fields: [dicomId], references: [id], onDelete: Cascade)
  dicomId       String
}
